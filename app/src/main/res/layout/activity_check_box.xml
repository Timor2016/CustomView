<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.wc.customview.view.check_box.CheckMaterial
        android:id="@+id/check_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:mark_width="1dp"/>

    <com.wc.customview.view.check_box.CheckMaterial
        android:id="@+id/check_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:border_color="@android:color/holo_blue_bright"
        app:border_wide="5dp"
        app:check_color="@android:color/holo_blue_dark"
        app:mark_color="#222222"
        app:mark_width="3dp"/>


</LinearLayout>